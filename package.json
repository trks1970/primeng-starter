{
  "name": "mapping-service-fe",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "openapi": "openapi-generator-cli generate -i ./openapi/1CID_api_mapping_fe.yaml -g typescript-angular -o ./generated/openapi --additional-properties fileNaming=kebab-case,ngVersion=17.0.0 --generate-alias-as-model",
    "prebuild": "npm run openapi && npm run format && npm run lint",
    "prestart": "npm run openapi",
    "lint": "ng lint",
    "format": "prettier --write \"**/*.{js,ts,d.ts}\"",
    "format:check": "prettier --check \"**/*.{js,ts,d.ts}\"",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href /",
    "watch": "ng build --watch --configuration development",
    "test": "npm run build && npm run test-esm",
    "test-isolated": "jest -c=jest-isolated.config.js --no-cache",
    "test-esm": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -c=jest-esm.config.mjs --no-cache",
    "test-esm-isolated": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -c=jest-esm-isolated.config.mjs --no-cache",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.1",
    "@angular/common": "^17.3.1",
    "@angular/compiler": "^17.3.1",
    "@angular/core": "^17.3.1",
    "@angular/forms": "^17.3.1",
    "@angular/platform-browser": "^17.3.1",
    "@angular/platform-browser-dynamic": "^17.3.1",
    "@angular/router": "^17.3.1",
    "@azure/msal-angular": "^3.0.13",
    "@azure/msal-browser": "^3.10.0",
    "@ngneat/transloco": "^6.0.4",
    "dayjs": "^1.11.10",
    "flag-icons": "^7.1.0",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.1",
    "primeng": "^17.11.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.1",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "^17.3.1",
    "@angular/compiler-cli": "^17.3.1",
    "@happy-dom/jest-environment": "^14.3.1",
    "@openapitools/openapi-generator-cli": "^2.9.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "eslint": "^8.57.0",
    "happy-dom": "^14.3.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.0.3",
    "prettier": "^3.2.5",
    "sonarqube-scanner": "^3.3.0",
    "typescript": "~5.2.2"
  }
}
